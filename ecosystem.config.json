{
  "apps": [{
    "name": "childcomiccraft",
    "script": "./dist/index.js",
    "instances": 1,
    "exec_mode": "cluster",
    "env": {
      "NODE_ENV": "production",
      "PORT": 3001
    },
    "env_production": {
      "NODE_ENV": "production",
      "PORT": 3001
    },
    "log_file": "./logs/combined.log",
    "out_file": "./logs/out.log",
    "error_file": "./logs/error.log",
    "log_date_format": "YYYY-MM-DD HH:mm Z",
    "merge_logs": true,
    "max_memory_restart": "1G",
    "restart_delay": 1000,
    "watch": false,
    "ignore_watch": [
      "node_modules",
      "logs",
      ".git"
    ],
    "source_map_support": true
  }]
}
